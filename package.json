{
	"name": "news-fusion",
	"scripts": {
		"build": "esbuild api/index.ts --bundle --outfile=api/dist.js --format=cjs --platform=node --minify",
		"drizzle:migrate": "drizzle-kit generate && drizzle-kit migrate || true",
		"drizzle:push": "drizzle-kit push",
		"format": "biome format . --write",
		"lint": "tsc --noEmit && biome check . --write",
		"scrape": "bun run crawler/index.ts",
		"validate-sources": "bun run scripts/validate-sources.ts",
		"vercel": "vercel dev"
	},
	"dependencies": {
		"@extractus/article-extractor": "^8.0.19",
		"@hono/node-server": "^1.14.3",
		"@qdrant/js-client-rest": "^1.14.1",
		"chalk": "^5.4.1",
		"drizzle-orm": "^0.44.2",
		"feed": "^5.1.0",
		"hono": "^4.7.11",
		"itty-router": "^5.0.18",
		"openai": "^5.1.0",
		"postgres": "^3.4.7",
		"rss-parser": "^3.13.0",
		"zod": "^3.25.51"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"dotenv": "^16.5.0",
		"drizzle-kit": "^0.31.1",
		"esbuild": "^0.25.5",
		"vercel": "^42.3.0"
	}
}
