{
	"name": "news-fusion",
	"private": true,
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"test": "bun test tests/unit --timeout 20",
		"postinstall": "bun scripts/generate-tool-api-schema.ts",
		"lint": "bun run --filter '*' typecheck && biome check .",
		"lint:fix": "bun run --filter '*' typecheck && biome format . --write && biome check . --write"
	},
	"packageManager": "bun@1.1.25",
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@ckt1031/ai": "workspace:*",
		"@ckt1031/biome": "workspace:*",
		"@ckt1031/config": "workspace:*",
		"@ckt1031/news": "workspace:*",
		"@ckt1031/tool-api": "workspace:*",
		"@ckt1031/utils": "workspace:*",
		"@types/bun": "1.1.6",
		"typescript": "5.5.4"
	}
}
