{
	"name": "jobs",
	"type": "module",
	"scripts": {
		"typecheck": "tsc",
		"lobsters": "bun run build:forum && NODE=1 ./dist/forum lobsters",
		"hackernews": "bun run build:forum && NODE=1 ./dist/forum hackernews",
		"news-check": "bun run build:news-check && NODE=1 ./dist/news-check",
		"build:forum": "NODE=1 bun build --compile --minify scripts/forum.ts --outfile dist/forum",
		"build:news-check": "NODE=1 bun build --compile --minify scripts/news-check.ts --outfile dist/news-check"
	},
	"dependencies": {
		"@ckt1031/cache": "workspace:*",
		"@ckt1031/config": "workspace:*",
		"@ckt1031/news": "workspace:*",
		"@ckt1031/tsconfig": "workspace:*",
		"@ckt1031/types": "workspace:*",
		"@ckt1031/utils": "workspace:*",
		"mustache": "4.2.0"
	},
	"devDependencies": {
		"@types/mustache": "4.2.5"
	}
}
