{
	"$schema": "https://openapi.vercel.sh/vercel.json",
	"buildCommand": "bun run build && bun run drizzle:migrate",
	"rewrites": [
		{
			"source": "/favicon.ico",
			"destination": "public/favicon.ico"
		},
		{
			"source": "/robots.txt",
			"destination": "public/robots.txt"
		},
		{
			"source": "/icon.jpg",
			"destination": "public/icon.jpg"
		},
		{
			"source": "/",
			"destination": "public/index.html"
		},
		{
			"source": "/(.*)",
			"destination": "api/dist"
		}
	]
}
