{
	"$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
	"files": {
		"ignore": [
			"node_modules",
			"dist",
			".dirzzle",
			".next",
			".vercel",
			"./src/types/tool-apis.d.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
