{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": ["node_modules", "dist", ".dirzzle", ".next", ".vercel"],
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			}
		},
		"ignore": ["node_modules", "dist", ".dirzzle", ".next", ".vercel"]
	},
	"organizeImports": {
		"enabled": true,
		"ignore": ["node_modules", "dist", ".dirzzle", ".next", ".vercel"]
	}
}
